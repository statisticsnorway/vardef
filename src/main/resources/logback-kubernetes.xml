<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp />
                <loggerName />
                <logLevel />
                <message />
                <arguments/>
            </providers>
        </encoder>
        <filter class="no.ssb.metadata.vardef.utils.HealthStatusFilter" />
    </appender>

    <appender name="HTTP_ACCESS_LOGGER_STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                {"@timestamp":"%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX}","httpRequest":%message,"logger":"%logger","severity":"%level","thread":"%thread"}%n
            </pattern>
        </encoder>
    </appender>

    <logger name="HTTP_ACCESS_LOGGER" level="info" additivity="false">
        <appender-ref ref="HTTP_ACCESS_LOGGER_STDOUT"/>
    </logger>

    <!-- Debug Micronaut Security internals -->
    <logger name="io.micronaut.security" level="DEBUG"/>
    <logger name="io.micronaut.security.token.jwt" level="DEBUG"/>
    <logger name="io.micronaut.security.token.validator" level="DEBUG"/>
    <logger name="no.ssb.metadata.vardef.security" level="DEBUG"/>

    <logger name="io.micronaut.management.health.monitor.HealthMonitorTask" level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="io.micronaut.http.client.netty.DefaultHttpClient" level="ERROR" />

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
